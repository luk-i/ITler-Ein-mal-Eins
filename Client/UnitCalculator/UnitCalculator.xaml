<Window x:Class="ITler_Ein_mal_Eins.UnitCalculator.UnitCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITler_Ein_mal_Eins.UnitCalculator"
        mc:Ignorable="d"
        Title="Einheiten Rechner" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <TabControl Margin="0,0,0,0">
            <TabItem Header="Bits - Bytes">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,0">
                    <StackPanel Margin="270,0,270,4.5" Orientation="Horizontal" Height="20" VerticalAlignment="Bottom" Cursor="Hand">
                        <Button Content="Button" Width="80"/>
                        <Button Content="Button" Width="80"/>
                        <Button Content="Button" Width="80"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Zahlensysteme">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="380*"/>
                    </Grid.ColumnDefinitions>

                </Grid>
            </TabItem>
        </TabControl>
        </Grid>
</Window>
