<Window x:Class="ITler_Ein_mal_Eins.Modules.SubnetCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITler_Ein_mal_Eins.Modules"
        mc:Ignorable="d"
        Title="SubnetCalculator" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="399" Margin="0,10,0,0" VerticalAlignment="Top" Width="782">
            <TabItem Header="IPv4" Margin="0,0,-25,0">
                <Grid x:Name="MainGrid_SubnetCalc" Background="#FFE5E5E5">
                    <Grid x:Name="Adress_Grid" HorizontalAlignment="Left" Height="168" Margin="10,10,0,0" VerticalAlignment="Top" Width="279">
                        <Frame x:Name="SubnetMask_Frame" Content="Subnetzmaske" HorizontalAlignment="Left" Height="22" Margin="10,64,0,0" VerticalAlignment="Top" Width="107" FontSize="16"/>
                        <Frame x:Name="Ip_Frame" Content="Ip-Adresse" HorizontalAlignment="Left" Height="22" Margin="10,10,0,0" VerticalAlignment="Top" Width="107" FontSize="14"/>
                        <TextBox x:Name="Ip4_textBox1" HorizontalAlignment="Left" Height="22" Margin="10,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" Tag="3"/>
                        <TextBox x:Name="Ip4_textBox2" HorizontalAlignment="Left" Height="22" Margin="50,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" Tag="3"/>
                        <TextBox x:Name="Ip4_textBox3" HorizontalAlignment="Left" Height="22" Margin="90,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" Tag="3"/>
                        <TextBox x:Name="Ip4_textBox4" HorizontalAlignment="Left" Height="22" Margin="130,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" Tag="3"/>
                        <TextBox x:Name="Subnet_textBox1" HorizontalAlignment="Left" Height="22" Margin="10,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" Tag="3"/>
                        <TextBox x:Name="Subnet_textBox2" HorizontalAlignment="Left" Height="22" Margin="50,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" Tag="3"/>
                        <TextBox x:Name="Subnet_textBox3" HorizontalAlignment="Left" Height="22" Margin="90,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" Tag="3"/>
                        <TextBox x:Name="Subnet_textBox4" HorizontalAlignment="Left" Height="22" Margin="130,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" Tag="3"/>
                        <TextBox x:Name="Subnet_textBox_ShortWritten" HorizontalAlignment="Left" Height="22" Margin="192,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="26" Tag="3"/>
                        <Label x:Name="label_AdressGrid_IsDataCorrect" Content="Bitte Werte eintragen" HorizontalAlignment="Left" Height="40" Margin="10,118,0,0" VerticalAlignment="Top" Width="221"/>
                        <Label x:Name="SubnetMask_Slash" Content="/" HorizontalAlignment="Left" Height="32" Margin="176,88,0,0" VerticalAlignment="Top" Width="16"/>
                        <Button x:Name="button_Submit" Content="Einfügen" HorizontalAlignment="Left" Height="22" Margin="170,37,0,0" VerticalAlignment="Top" Width="61" Click="button_Submit_Click"/>
                    </Grid>
                    <Grid x:Name="Solution_Grid" HorizontalAlignment="Left" Height="209" Margin="294,11,0,0" VerticalAlignment="Top" Width="414">
                        <Label x:Name="tb_2_DecimalData" Content="Lösungsgrid... IP Grid lockt nach validation, subnetgrid wird erst danach freigegeben." HorizontalAlignment="Left" Height="22" Margin="0,10,0,0" VerticalAlignment="Top" Width="155" FontSize="10"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="IPv6" Margin="25,0,-47,0">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
