<Window x:Class="ITler_Ein_mal_Eins.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITler_Ein_mal_Eins"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid" HorizontalAlignment="Left" Height="413" Margin="-4,0,0,0" VerticalAlignment="Top" Width="790">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Calculator_button" Content="Umrechner" Grid.Column="1" HorizontalAlignment="Left" Height="86" Margin="23,100,0,0" VerticalAlignment="Top" Width="169" Click="button_Click"/>
        <Menu x:Name="menu" Height="33" Margin="0" VerticalAlignment="Top" Background="#FF878787" HorizontalAlignment="Left" Width="303" Grid.ColumnSpan="2">
            <Button x:Name="Exit_Button" Height="30" Width="60" Content="Exit" Click="Exit_Button_Click"/>
            <Button Height="30" Width="60"/>
        </Menu>
        <Button x:Name="button_SubnetCalculator" Content="Subnet Berechner" Grid.Column="1" HorizontalAlignment="Left" Height="86" Margin="228,100,0,0" VerticalAlignment="Top" Width="169" Click="button_Click"/>
    </Grid>
</Window>

