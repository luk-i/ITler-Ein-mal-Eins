                        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="19" Margin="10,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35"/>
                        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="19" Margin="50,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35"/>
                        <TextBox x:Name="textBox3" HorizontalAlignment="Left" Height="19" Margin="90,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35"/>
                        <TextBox x:Name="textBox4" HorizontalAlignment="Left" Height="19" Margin="130,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35"/>
                        <Label x:Name="tb_1_DecimalData" Content="tb1" HorizontalAlignment="Left" Height="26" Margin="10,57,0,0" VerticalAlignment="Top" Width="90"/>
                        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Height="19" Margin="170,33,0,0" VerticalAlignment="Top" Width="61"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="IPv6" Margin="25,0,-47,0">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
